{
    "build": {
        "beforeBuildCommand": "cd app && npm run build",
        "beforeDevCommand": "cd app && npm run dev",
        "devPath": "http://localhost:8080",
        "distDir": "../ui/dist"
    },
    "tauri": {
        "bundle": {
            "identifier": "sfz.plugin-manager",
            "icon": ["icons/icon.ico"]
        },
        "allowlist": {
            "all": false
        },
        "windows": [
            {
                "width": 1600,
                "height": 900,
                "resizable": true,
                "fullscreen": false
            }
        ]
    }
}
